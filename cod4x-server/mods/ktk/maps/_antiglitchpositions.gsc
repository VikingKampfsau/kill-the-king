			level.blockers[0] = spawn("trigger_radius", (541.108, -2244.38, 36.125),0, 10, 52);
			level.blockers[1] = spawn("trigger_radius", (-1447.88, -762.625, -35.875),0, 10, 105.026);
			break;
	
